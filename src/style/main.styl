/*  <adaptive>  */
$desktop = '(min-width:1200px)';
$tablet = '(min-width:992px)';
$middle = '(min-width:768px)';
$small = '(min-width:576px)';
/*  </adaptive>  */

/*  <grid>  */
.container
	width 100%
	padding-right 16px
	padding-left 16px
	margin-right auto
	margin-left auto
	@media $small
		max-width 540px
	@media $middle
		max-width 720px
	@media $tablet
		max-width 960px
	@media $desktop
		max-width 1140px
.main
	flex 1
/*  </grid>  */

/*  <variables>  */
:root
	--text-color #16244a
	--link-color #27488d
	--fonts 'HelveticaNeue', Arial
/*  </variables>  */

/*  <general>  */
*
*::before
*::after
	box-sizing border-box
html
	font-size 62.5%
	cursor default
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	-webkit-tap-highlight-color #000
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
body
	display flex
	flex-direction column
	min-height 100vh
	color var(--text-color)
	font normal 1.6rem/1.5 'HelveticaNeue', 'Arial'
	background-color #fff
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color var(--link-color)
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
img
	max-width 100%
/*  </general>  */

/*  <splash>  */
.splash
	position relative
	height 100vh
	scroll-snap-type y mandatory
	&__container
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		color #f9f9f9
		font-weight bold
	&__item
		position relative
		height 100vh
		color #f9f9f9
		text-transform uppercase
		text-align center
		&::before
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			opacity .4
			background-color #160e6a
			content ''
		&-img
			position absolute
			top 0
			left 0
			z-index -1
			width 100%
			height 100%
			object-fit cover
		&-title
			position relative
			font-size 1.2rem
			text-align center
			padding-top 96px
			@media $desktop
				font-size 1.6rem
				padding-top 258px
		&-description
			position relative
			font-size 2.2rem
			line-height 1.18
			@media $desktop
				width 978px
				font-size 3.6rem
				font-weight bold
				letter-spacing .5px
				line-height 1.22
				padding 0 20px
				margin 4px auto 0
				span
					border-bottom 1px solid rgba(#f9f9f9, .3)
	&__subscribe
		position absolute
		bottom 36px
		right 0
		left 0
		z-index 2
		font-size 1.2rem
		text-transform uppercase
		text-align center
		@media $desktop
			bottom 194px
			font-size 1.6rem
			font-weight bold
		&-form
			position relative
			border-bottom 1px solid rgba(#f9f9f9, .3)
			padding 0 40px
			@media $desktop
				width 400px
				margin 4px auto 0
			&::before
				position absolute
				bottom -1px
				left 0
				width 0
				height 1px
				content ''
			&:focus-within
				&::before
					width 100%
					background-color #f9f9f9
					transition all .4s
		&-input
			width 100%
			height 36px
			color #f9f9f9
			font-size 1.6rem
			text-align center
			background-color transparent
			border 0
			outline none
			@media $desktop
				height 44px
		&-submit
			position absolute
			top 50%
			right 4px
			width 24px
			height @width
			background-color transparent
			padding 0
			border 0
			cursor pointer
			transform translateY(-50%)
			svg
				width 24px
				height 24px
				fill #f9f9f9
			&:active
				margin-top 1px
	&__main
		position relative
	&__logo
		position absolute
		top 16px
		left @top
		@media $desktop
			top 40px
			left -115px
	&__menu
		position absolute
		top 16px
		right @top
		width 24px
		height @width
		&::before
		&::after
			position absolute
			right 4px
			left 4px
			height 2px
			background-color #f9f9f9
			content ''
		&::before
			top 6px
		&::after
			bottom 6px
		@media $desktop
			display none
	&__nav
		position fixed
		top 0
		bottom 0
		left 0
		z-index 1000
		overflow auto
		width 250px
		background-color #f9f9f9
		padding 20px 0
		transform translateX(-100%)
		transition all .5s
		&--active
			box-shadow 0 0 5px #000
			transform translateX(0)
		&-item
			display block
			padding 10px
			svg
				display none
		@media $desktop
			display flex
			justify-content center
			position absolute
			top 47px
			bottom auto
			left 0
			z-index 1
			overflow inherit
			width 100%
			background-color transparent
			padding 0
			box-shadow none
			transform none
			&-item
				color #fff
				font-size 1.4rem
				padding 0
				margin 0 24px
				&--delivery
					position relative
					padding-left 43px
					&::before
						position absolute
						top 50%
						left 0
						width 36px
						height @width
						background-color rgba(#fff, .1)
						border-radius 50%
						content ''
						transform translateY(-50%)
					svg
						display block
						position absolute
						top 50%
						left 6px
						width 24px
						height @width
						fill #fff
						transform translateY(-50%)
	&__language-change
		display none
		@media $desktop
			display block
			position absolute
			top 47px
			right -33px
			z-index 2
			color #fff
			font-size 1.3rem
			padding-left 26px
			svg
				position absolute
				top 50%
				left 0
				width 24px
				height @width
				fill @color
				transform translateY(-50%)
	&__about
		display none
		@media $desktop
			animation 2s ease-out slideFromBottom
			display block
			position absolute
			bottom 50px
			left 50%
			color #fff
			font-size 1.4rem
			font-weight bold
			padding-left 43px
			transform translateX(-50%)
			&::before
				position absolute
				top 50%
				left 0
				width 36px
				height @width
				background-color rgba(#fff, .1)
				border-radius 50%
				content ''
				transform translateY(-50%)
			&::after
				position absolute
				top 50%
				left 13px
				width 12px
				height @width
				border solid #fff
				border-width 0 2px 2px 0
				content ''
				transform translateY(-75%) rotate(45deg)
/*  </splash>  */

/*  <about-us>  */
.about-us
	display flex
	flex-direction column
	margin-top 48px
	margin-bottom 42px
	@media $desktop
		position relative
		padding-right 552px
	&__title
		order 1
		font-size 2.4rem
		line-height 1.25
		margin 0
		@media $desktop
			font-size 3.6rem
			line-height 1.11
	&__pic
		order 2
		margin 16px 0
		@media $desktop
			position absolute
			top 0
			right 16px
			img
				width 486px
				height 573px
				object-fit cover
	&__description
		order 3
		margin 16px 0
		@media $desktop
			font-size 2.2rem
			margin 26px 0
	&__signature
		order 4
		font-size 1.4rem
		line-height 1.7
		span
			display block
	&__links
		order 5
		display flex
		flex-direction column
		margin 16px 0
		@media $desktop
			flex-direction row
		&-item
			display block
			position relative
			color #27488d
			font-size 1.4rem
			font-weight bold
			line-height 1.34
			padding-left 43px
			margin 16px 0
			&::before
				position absolute
				top 50%
				left 0
				width 36px
				height 36px
				border-radius 50%
				content ''
				transform translateY(-50%)
			&--menu
				order 1
				@media $desktop
					order 0
					margin-right 32px
				&::before
					background-color rgba(#f39200, .05)
			&--delivery
				@media $desktop
					order 1
				&::before
					background-color rgba(#ec619f, .05)
				svg
					fill #ec619f
			svg
				position absolute
				top -3px
				left 6px
				width 24px
				height @width
/*  </about-us>  */

/*  <footer>  */
.footer
	overflow-x hidden
	border-top 1px solid rgba(#364b8d, .1)
	padding-top 48px
	&__title
		font-size 2.4rem
		line-height 1.25
		@media $desktop
			font-size 3.6rem
			line-height 1.1
	&__info
		display flex
		flex-direction column
		@media $desktop
			flex-direction row
			margin-bottom 126px
	&__item
		margin 16px 0
		@media $desktop
			width 25%
			margin-right 127px
			&:first-child
				width 35%
			&:last-child
				margin-right 0
		a
			color var(--text-color)
			text-decoration underline rgba(#27488d, .2)
			text-underline-offset 5px
			&:hover
				text-decoration-color rgba(#27488d, 1)
		&-address
			@media $desktop
				font-size 2.2rem
			span
				display block
		&-title
			font-size 1.4rem
			font-weight bold
			line-height 1.71
			margin 0 0 3px
		&-description
			font-size 1.4rem
			p
				margin 0
			&--insta
				position relative
				padding-left 17px
				svg
					position absolute
					top 50%
					left 0
					width 12px
					height @width
					fill var(--text-color)
					margin-right 5px
					transform translateY(-50%)
.copyright
	position relative
	display flex
	align-items center
	height 50px
	color var(--link-color)
	&::before
		position absolute
		top 0
		left -10000px
		width 20000px
		height 1px
		background-color rgba(#364b8d, .1)
		content ''
/*  </footer>  */

/*  <system>  */
.no-scroll
	overflow hidden
.shadow
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 999
	background-color rgba(#000, .5)
.fadeIn
	animation fadeIn .5s
.btn
	display inline-flex
	justify-content center
	align-items center
	height 40px
	color #fff
	font-size 1.6rem
	text-transform uppercase
	background-color var(--color-text)
	border 0
	border-radius 2px
	padding 0 30px
	cursor pointer
	transition all .2s
@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1
@keyframes slideFromBottom
	from
		opacity 0
		transform translate(-50%, 100px)
	to
		opacity 1
		transform translate(-50%, 0)
/*  </system>  */
